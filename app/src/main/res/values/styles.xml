    <style name="AppTheme" parent="BaseAppTheme" />

    <style name="BaseAppTheme" parent="BaseAppTheme.NoActionBar" />

    <style name="BaseAppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/color_44C679</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="ChooseEditText">
        <attr name="cet_ChooseBgColor" format="reference|color" />
        <attr name="cet_ChooseTextColor" format="reference|color" />
        <attr name="cet_TextSize" format="reference|dimension" />
        <attr name="cet_Hint" format="reference|string" />
    </declare-styleable>

    <!-- 高版本 -->
    <style name="ItemHeight">
        <item name="android:listPreferredItemHeightSmall">50dp</item>
    </style>

    <style name="textstyle">

        <item name="android:textSize">16sp</item>
    </style>

    <style name="sty_mainbtn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@mipmap/ic_btn</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>


</resources>
