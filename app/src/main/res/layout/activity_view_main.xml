<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_view_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.innotek.demotestproject.activity_view.activity.ViewMainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_textview"
            style="@style/sty_mainbtn"
            android:text="text的绘制" />

        <Button
            android:id="@+id/btn_horizonlayout"
            style="@style/sty_mainbtn"
            android:text="横向stepview" />

        <Button
            android:id="@+id/btn_stepviewitem"
            style="@style/sty_mainbtn"
            android:text="stepviewitem" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btn_timestepitem"
            style="@style/sty_mainbtn"
            android:text="timestepitem" />

        <Button
            android:id="@+id/btn_matrixcamera"
            style="@style/sty_mainbtn"
            android:text="MatrixCamera" />

        <Button
            android:id="@+id/btn_viewgroup"
            style="@style/sty_mainbtn"
            android:text="FlowLayout" />
    </LinearLayout>
</LinearLayout>
